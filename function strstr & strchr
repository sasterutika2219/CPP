
//Check a string is  substring of another string

#include<iostream>
#include<string.h>

using namespace std;

int main(){
    char s1[20];
    char s2[10];

    cout<<"Enter string:"<<endl;
    cin.getline(s1,20);

    
    cout<<"Enter Substring:"<<endl;
    cin.getline(s2,10);

    if(strstr(s1,s2)!=NULL){       //For substring
    cout<<strstr(s1,s2)<<endl;
    }
    else{
        cout<<"Not found";
    }
    
    cout<<strchr(s1,'r');
    return 0;

}
