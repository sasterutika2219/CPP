//Count Vowels, Consonents,words

#include<iostream>
#include<string>
using namespace std;

int main(){
    int Vowels =0;
    int Cons=0;
    int space=1;
    string s="Hello i am Rutika";
    for(int i=0;s[i]!='\0';i++){
        if(s[i]=='a'||s[i]=='e'||s[i]=='i'|| s[i]=='o'||s[i]=='u'||s[i]=='A'||s[i]=='E'|| s[i]=='I'||s[i]=='O'||s[i]=='U'){
            Vowels=Vowels+1;
        }
        else if(s[i]==' '){
            space++;
        }
        else{
            Cons=Cons+1;
        }
        
    }
    cout<<"In given string , There are "<<Vowels<<" Vowels , "<<Cons<<" Consonents "<<space<<" Words are present";
}
